# UTERNITY Authentication Service Environment Configuration

# Application Settings
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080","http://127.0.0.1:3000","http://127.0.0.1:5173","http://127.0.0.1:8080"]

# MongoDB Settings
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=uternity_auth
MONGODB_USERS_COLLECTION=users
MONGODB_SESSIONS_COLLECTION=sessions

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_TTL=86400

# JWT Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Password Security Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_BCRYPT_ROUNDS=12

# Rate Limiting Settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900

# OAuth Settings - Google
# Get these from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/oauth/google/callback

# OAuth Settings - LinkedIn
# Get these from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/auth/oauth/linkedin/callback

# OAuth Security
OAUTH_STATE_SECRET=oauth-state-secret-change-in-production
OAUTH_SESSION_TTL=600

# Security Settings
SESSION_SECURE_COOKIES=false
SESSION_SAME_SITE=lax
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Email Settings (Optional - for verification)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=["pdf","doc","docx","txt","jpg","jpeg","png"]

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=8001
